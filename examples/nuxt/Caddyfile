# Standalone Caddyfile for Nuxt
# Generated by lns

{
    auto_https off
    http_port 80
}

http://my-nuxt-app.localhost:80 {
    reverse_proxy localhost:3100 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
}
