# Standalone Caddyfile for FastAPI + Vite
# Generated by lns

{
    auto_https off
    http_port 80
}

# FastAPI Backend
http://my-fullstack-app-api.localhost:80 {
    reverse_proxy localhost:8000
}

# Vite Frontend
http://my-fullstack-app-frontend.localhost:80 {
    reverse_proxy localhost:5173 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
}
